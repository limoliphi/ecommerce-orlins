{% extends 'base.html.twig' %}

{% block title %}Mon compte | La Boutique d'Orlins{% endblock %}

{% block content %}
    <h1>Mon compte</h1>
    {% if is_granted ('ROLE_ADMIN') %}
        <p>
            <small><a href="/admin">Vous êtes un administrateur, accédez au backoffice</a></small>
        </p>
    {% endif %}
    <p>
        Bienvenue {{ app.user.firstname }} dans votre compte.
    </p>
    <p>
        C'est dans cet espace que vous allez pouvoir gérer toutes vos informations personnelles.
    </p>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}" alt="Modifier mon mot de passe"><br/>
                <p>
                    <a href="{{ path('account_password') }}">Changer de mot de passe</a>
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/sign.png') }}" alt="Gérer mes adresses"><br/>
                <p>
                    <a href="{{ path('account_address') }}">Gérer mes adresses</a>
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/purchase.png') }}" alt="Mes commandes"><br/>
                <p>
                    <a href="{{ path('account_order') }}">Mes commandes</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
