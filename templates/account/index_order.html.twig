{% extends 'base.html.twig' %}

{% block title %}Mes commandes | La Boutique d'Orlins{% endblock %}

{% block content %}
    <h1>Mes commandes</h1>
    <p>
        C'est dans cet espace que vous allez pouvoir gérer toutes vos commandes.
    </p>
    <hr>
    <p>
        <a href="{{ path('account') }}">Retour</a>
    </p>
    {% if orders|length == 0 %}
        <hr>
        <p class="text-muted text-center mt-5">Vous n'avez pas encore passé de commande auprès de la Boutique
            d'Orlins.</p>
    {% else %}
        <table class="table mt-4">
            <thead>
            <tr>
                <th scope="col">Référence</th>
                <th scope="col">Passée le</th>
                <th scope="col">Produit(s)</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td><span class="badge badge-secondary">{{ order.reference }}</span></td>
                    <td>{{ order.createdAt|date('d/m/Y') }}</td>
                    <td class="text-center">{{ order.orderDetails|length }}</td>
                    <td>{{ ((order.carrierPrice + order.getTotal) / 100)|number_format('2', ',', ',') }} €</td>
                    <td class="text-right"><a href="{{ path('account_order_show', {'reference' : order.reference }) }}">Ma commande</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
